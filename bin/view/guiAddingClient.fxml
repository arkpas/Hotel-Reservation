<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<VBox fx:controller="controllers.ControllerAddingClient" xmlns:fx="http://javafx.com/fxml" spacing="5" id="mainBackground">
	<GridPane vgap="2" hgap="5">
		<padding>
			<Insets left="10" right="10" top="10" bottom="10"/>
		</padding>
			<Label text="Name: " GridPane.rowIndex="0" GridPane.columnIndex="0"/> <TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="100"/>
			<Label text="Surname: " GridPane.rowIndex="1" GridPane.columnIndex="0"/> <TextField fx:id="surname" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="125"/>
			<Label text="Phone: " GridPane.rowIndex="2" GridPane.columnIndex="0"/> <TextField fx:id="phone" GridPane.rowIndex="2" GridPane.columnIndex="1"  maxWidth="85"/>
			<Label text="Address: " GridPane.rowIndex="3" GridPane.columnIndex="0"/> <TextField fx:id="address" GridPane.rowIndex="3" GridPane.columnIndex="1"  maxWidth="150"/>
			<Label text="City: " GridPane.rowIndex="4" GridPane.columnIndex="0"/> <TextField fx:id="city" GridPane.rowIndex="4" GridPane.columnIndex="1"  maxWidth="100"/>
			<Label text="Postal code: " GridPane.rowIndex="5" GridPane.columnIndex="0"/> <TextField fx:id="postalCode" GridPane.rowIndex="5" GridPane.columnIndex="1" maxWidth="60"/>
	</GridPane>
	<VBox alignment="BOTTOM_LEFT">
		<padding>
			<Insets left="10" right="10" top="10" bottom="10"/>
		</padding>
		<Button fx:id="addButton" onAction="#addClient" text="Create"/>
	</VBox>
</VBox>