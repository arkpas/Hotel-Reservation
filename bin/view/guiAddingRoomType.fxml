<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>

<VBox fx:controller="controllers.ControllerAddingRoomType" xmlns:fx="http://javafx.com/fxml" spacing="5" id="mainBackground" >
	<padding>
		<Insets left="10" right="10" top="10" bottom="10"/>
	</padding>
		<HBox spacing="5"><Label prefHeight="25" text="Name: "/> <TextField fx:id="nameField" prefWidth="75"/></HBox>
		<HBox spacing="5"><Label prefHeight="25" text="Size: "/> <TextField fx:id="sizeField" prefWidth="100" prefHeight="25"/></HBox>
		<HBox spacing="5"><Label prefHeight="25" text="Beds: "/> <TextField fx:id="bedsField" prefWidth="75" prefHeight="25"/></HBox>
		<HBox spacing="5" alignment="CENTER_LEFT"><Label prefHeight="25" text="Balcony: "/> <RadioButton fx:id="balconyButton"/></HBox>
		<HBox spacing="5" alignment="CENTER_LEFT"><Label prefHeight="25" text="Bathroom: "/> <RadioButton fx:id="bathroomButton"/></HBox>
		<HBox spacing="5"><Label prefHeight="25" text="Price: "/> <TextField fx:id="priceField" prefWidth="75" prefHeight="25"/></HBox>
		<HBox spacing="5"><Button onAction="#addRoomType" text="Create"/></HBox>
</VBox>
